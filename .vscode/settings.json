// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
		"**/*.js": {"when": "$(basename).ts"},
		"**/*.js.map": {"when": "$(basename)"}
  },
  "editor.insertSpaces": false,
  "editor.tabSize": 2,
	"editor.detectIndentation": false,
	"typescript.tsdk": "./node_modules/typescript/lib"
}